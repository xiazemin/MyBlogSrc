package main</p>

<p>import (
    “fmt”
    “time”
)
//创建一个管道
var myChan = make(chan bool)</p>

<p>func printer(str string)  {
    for _, value := range str {
        fmt.Printf(“%c”, value)
        time.Sleep(time.Microsecond * 300)
    }
}</p>

<p>func person1()  {
    printer(“hello”)
    //往管道中写入数据
    //只有printer函数执行完,才会往管道中写入数据
    myChan&lt;-true
}</p>

<p>func person2()  {
    //从管道中读取数据
    //只有管道中有数据才会读取,否则会阻塞
    &lt;-myChan
    printer(“world”)
}</p>

<p>func main() {
    go person1()
    go person2()
    for  {
        ;
    }
}
