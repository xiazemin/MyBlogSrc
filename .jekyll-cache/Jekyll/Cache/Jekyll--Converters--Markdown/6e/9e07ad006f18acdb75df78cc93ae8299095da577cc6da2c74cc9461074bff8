    //定义随机因子
    rand.Seed(time.Now().UnixNano())
    //产生随机数
    for i := 0;i &lt; 10 ;i++  {
        num := rand.Intn(100)
        fmt.Println(“生产者生产了”, num)
        //将生产的数据放入缓冲区中
        arr[i] = num
        time.Sleep(time.Millisecond * 300)</p>

