<p>//定义一个生产者
func producter(buff chan &lt;- int)  {
    //定义随机因子
    rand.Seed(time.Now().UnixNano())
    //生成随机数
    for i := 0;i &lt; 5 ;i++  {
        num := rand.Intn(100)
        //将产生的随机数存储到管道中
        buff &lt;- num
        fmt.Println(“生产者生产了”, num)
    }
}</p>

<p>//定义消费者函数
func consumer(buff &lt;- chan  int, exitChan chan &lt;- int )  {
    for i := 0;i &lt; 5 ;i++  {
        //读取管道中的数据
        num := &lt;-buff
        fmt.Println(“——消费者消费”, num)
    }
    //利用管道阻塞解决死循环问题
    exitChan&lt;- 666
}
func main() {
    //定义两个双向管道
    myChan := make(chan int, 5)
    exitChan := make(chan int)</p>

