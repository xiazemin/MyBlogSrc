func CamelCase(s string) string {
	if s == â€œâ€ {
		return â€œâ€
	}
	t := make([]byte, 0, 32)
	i := 0
	for ; i &lt; len(s); i++ {
		c := s[i]
		if isASCIIDigit(c) {
			t = append(t, c)
			continue
		}
		if isASCIIUpper(c) {
			c ^= â€˜ â€˜
		}
		t = append(t, c)
		for i+1 &lt; len(s) &amp;&amp; isASCIIUpper(s[i+1]) {
			i++
			t = append(t, â€˜_â€™, s[i]+32)
		}
	}
	//return <em>(</em>string)(unsafe.Pointer(&amp;t))
	return string(t)
}
func isASCIIUpper(c byte) bool {
	return â€˜Aâ€™ &lt;= c &amp;&amp; c &lt;= â€˜Zâ€™
}</p>

