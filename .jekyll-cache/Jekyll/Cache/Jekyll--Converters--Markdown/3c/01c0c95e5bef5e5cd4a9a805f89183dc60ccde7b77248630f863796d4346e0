<p>// msgHeaders merges the Emailâ€™s various fields and custom headers together in a
// standards compliant way to create a MIMEHeader to be used in the resulting
// message. It does not alter e.Headers.
//
// â€œeâ€â€™s fields To, Cc, From, Subject will be used unless they are present in
// e.Headers. Unless set in e.Headers, â€œDateâ€ will filled with the current time.
func (e *Email) msgHeaders() (textproto.MIMEHeader, error) {
    res := make(textproto.MIMEHeader, len(e.Headers)+4)
    if e.Headers != nil {
        for _, h := range []string{â€œReply-Toâ€, â€œToâ€, â€œCcâ€, â€œFromâ€, â€œSubjectâ€, â€œDateâ€, â€œMessage-Idâ€, â€œMIME-Versionâ€} {
            if v, ok := e.Headers[h]; ok {
                res[h] = v
            }
        }
    }
    // Set headers if there are values.
    if _, ok := res[â€œReply-Toâ€]; !ok &amp;&amp; len(e.ReplyTo) &gt; 0 {
        res.Set(â€œReply-Toâ€, strings.Join(e.ReplyTo, â€œ, â€œ))
    }
    if _, ok := res[â€œToâ€]; !ok &amp;&amp; len(e.To) &gt; 0 {
        res.Set(â€œToâ€, strings.Join(e.To, â€œ, â€œ))
    }
    if _, ok := res[â€œCcâ€]; !ok &amp;&amp; len(e.Cc) &gt; 0 {
        res.Set(â€œCcâ€, strings.Join(e.Cc, â€œ, â€œ))
    }
    if _, ok := res[â€œSubjectâ€]; !ok &amp;&amp; e.Subject != â€œâ€ {
        res.Set(â€œSubjectâ€, e.Subject)
    }
    if _, ok := res[â€œMessage-Idâ€]; !ok {
        id, err := generateMessageID()
        if err != nil {
            return nil, err
        }
        res.Set(â€œMessage-Idâ€, id)
    }
    // Date and From are required headers.
    if _, ok := res[â€œFromâ€]; !ok {
        res.Set(â€œFromâ€, e.From)
    }
    if _, ok := res[â€œDateâ€]; !ok {
        res.Set(â€œDateâ€, time.Now().Format(time.RFC1123Z))
    }
    if _, ok := res[â€œMIME-Versionâ€]; !ok {
        res.Set(â€œMIME-Versionâ€, â€œ1.0â€)
    }
    for field, vals := range e.Headers {
        if _, ok := res[field]; !ok {
            res[field] = vals
        }
    }
    return res, nil
}</p>

