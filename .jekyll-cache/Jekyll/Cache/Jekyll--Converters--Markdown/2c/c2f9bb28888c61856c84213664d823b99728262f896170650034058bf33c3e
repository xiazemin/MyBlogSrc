<p>fl, err := os.OpenFile(f.FileName, os.O_APPEND|os.O_CREATE, 0644)
if err != nil {
    return 0, err
}
defer fl.Close()
n, err := fl.Write(data)
if err == nil &amp;&amp; n &lt; len(data) {
    err = io.ErrShortWrite
}
return n, err</p>

