func bubbleSort(array []int) {
	for i := 0; i &lt; len(array); i++ {
		for j := 0; j &lt; len(array)-i-1; j++ {
			if array[j] &gt; array[j+1] {
				array[j], array[j+1] = array[j+1], array[j]
			}
		}
	}
}
