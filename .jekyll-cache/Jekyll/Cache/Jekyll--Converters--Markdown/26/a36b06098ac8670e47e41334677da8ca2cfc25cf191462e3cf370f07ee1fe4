type Sortable interface{
	Len() int
	Less(int, int) bool
	Swap(int, int)
}
ç®—æ³•
func bubbleSort(array Sortable) {
	for i := 0; i &lt; array.Len(); i++ {
		for j := 0; j &lt; array.Len()-i-1; j++ {
			if array.Less(j+1, j) {
				array.Swap(j, j+1)
			}
		}
	}
}
