func bubbleSort(array []interface{}) {
	for i := 0; i &lt;len(arr); i++ {
		for j := 0; j &lt; len(array)-i-1; j++ {
            switch array[j].(Type){
              case int:
                if array[j+1]&lt;array[j]{
                  array[j+1],array[j]=array[j],array[j+1]
                }
            }
		}
	}
}</p>
