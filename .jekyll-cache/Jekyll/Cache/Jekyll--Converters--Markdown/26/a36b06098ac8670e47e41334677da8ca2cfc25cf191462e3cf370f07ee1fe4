type IntArr []int
func (array IntArr) Len() int {
	return len(array)
}
func (array IntArr) Less(i int, j int) bool {
	return array[i] &lt; array[j]
}
func (array IntArr) Swap(i int, j int) {
	array[i], array[j] = array[j], array[i]
}
