CREATE TABLE test4 (<br />
     id BIGINT UNSIGNED  PRIMARY KEY AUTO_INCREMENT,<br />
     brand VARCHAR(255) NOT NULL,<br />
     color ENUM(‘RED’,’GREEN’,’BLUE’)
  ) ENGINE = InnoDB;</p>
